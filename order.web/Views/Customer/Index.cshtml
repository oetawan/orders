@model IEnumerable<order.model.Customer>

@{
    ViewBag.Title = "Administrator Page";
    Layout = "~/Views/Shared/_LayoutApp.cshtml";
}

@section styles
{
     @Styles.Render("~/Content/css/manageaccount")
}

@section navbar
{
    <div class="navbar">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <a class="brand" href="#"><span aria-hidden="true" data-icon="b"></span> Customers</a>
                <div class="nav-collapse collapse pull-right">
                    <ul class="nav">
                        <li class="divider-vertical"></li>
                        <li><a href="/Customer/NewCustomer"><i aria-hidden="true" data-icon=""></i>  <strong>New Customer</strong></a></li>
                    </ul>
                </div>
            </div><!-- end of container-->
        </div><!-- end of navbar-inner-->
    </div><!-- end of navbar-->
}

<div class="metro span12">
    <div class="listview-container grid-layout zain-listview-container">
    @foreach (var item in Model) {
       <div class="mediumListIconTextItem zain-listviewitem">
          <img src="data:image/png;base64," class="mediumListIconTextItem-Image" data-src="holder.js/90x90" alt="90x90" style="width: 90px; height: 90px; background-color: rgb(238, 238, 238);" />
          <div class="mediumListIconTextItem-Detail">
            <h3 class="zain-heading">@Html.DisplayFor(modelItem => item.CustomerName) - @Html.DisplayFor(modelItem => item.CustomerCode)</h3>
            <span class="label label-info">@Html.DisplayFor(modelItem => item.LicenseId)</span>
            <div>
                <span class="label label-warning">@Html.DisplayFor(modelItem => item.ServiceBusNamespace)</span>
                <span class="label label-warning">@Html.DisplayFor(modelItem => item.Issuer)</span>
            </div>
            <div><span class="label label-danger">@Html.DisplayFor(modelItem => item.SecretKey)</span></div>
            @if (item.Registered)
            {
                <span class="label label-success">Registered</span>
            }
            <div class="zain-action-group">
                @Html.ActionLink("Edit", "EditCustomer", new { Id = item.Id }, new { id = "btn-edit-customer", Class = "btn btn-primary" })
                @Html.ActionLink("Delete", "DeleteCustomer", new { Id = item.Id }, new { id = "btn-delete-customer", Class = "btn btn-warning" })
            </div>
          </div>
       </div>
       <hr />
    }
    </div><!-- end of listview-container-->
</div><!-- end of .metro.span12-->
@section scripts
{
    <script type="text/javascript" src="@Url.Content("~/Scripts/underscore.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/backbone.min.js")"></script>
    <script data-main="@Url.Content("~/Scripts/app/order/customer")" type="text/javascript" src="@Url.Content("~/Scripts/require.js")"></script>
}