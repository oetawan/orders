@{
    Layout = "~/Views/Shared/_LayoutApp.cshtml";
}

@section styles
{
    @Styles.Render("~/Content/css/order")
}

@section navbar
{
    <div class="navbar">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <a class="brand" href="#">@ViewBag.VendorName</a>
                <ul class="nav">
                    <li class="divider-vertical"></li>
                </ul>
                <div class="nav-collapse collapse">
                    <form class="navbar-search pull-left" id="search-item-form">
                        <div class="input-append search-query">
                            <input type="text" class="span2 search-query">
                            <button type="submit" class="btn">Search</button>
                        </div>
                    </form>
                    <ul class="nav pull-right">
                        <li><a href="#" class="order-history-menu"><i class="icon-history"></i> Order history</a></li>
                        <li class="divider-vertical"></li>
                        <li><a class="brand" href="#"><span aria-hidden="true" data-icon="<"></span> <span id="order-qty-total"></span> item(s): <span id="order-amount">0</span></a></li>
                        <li class="divider-vertical back-divider"></li>
                        <li><a id="back-to-listitem-menu" href="#" aria-hidden="true" data-icon="!"></a></li>
                    </ul>
                </div>
            </div><!-- end of container-->
        </div><!-- end of navbar-inner-->
    </div><!-- end of navbar-->
}
<div class="metro span2 group-view"></div>
<div class="metro span10 item-view"></div>
<div class="metro span12 search-item-view"></div>
<div class="metro span12 checkout-view">
    <div class="row-fluid">
        <div class="span8 checkout-view-table"></div>
        <div class="span4 action">
            <button class="btn btn-large btn-success hidden checkout-command">Checkout</button>
        </div>
    </div>
</div>
<div class="metro span12 order-history-view">
</div>
<div class="order-error-container"></div>
@section scripts
{
    <script type="text/javascript" src="@Url.Content("~/Scripts/underscore.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/backbone.min.js")"></script>
    <script data-main="@Url.Content("~/Scripts/app/order/main")" type="text/javascript" src="@Url.Content("~/Scripts/require.js")"></script>
}