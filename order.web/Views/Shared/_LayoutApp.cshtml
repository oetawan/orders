<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
        <title>@ViewBag.Title - Home</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css/base")
        <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/bootmetro/css/bootstrap.css")" />
        <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/bootmetro/css/bootstrap-responsive.css")" />
        <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/bootmetro/css/bootmetro.css")" />
        <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/bootmetro/css/bootmetro-tiles.css")" />
        <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/bootmetro/css/bootmetro-charms.css")" />
        <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/bootmetro/css/metro-ui-light.css")" />
        <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/bootmetro/css/icomoon.css")" />
        <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/bootmetro/css/datepicker.css")" />
        <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/bootmetro/css/daterangepicker.css")" />
        @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header id="nav-bar" class="container-fluid">
    <div class="row-fluid">
        <div class="span8"> 
            <div id="header-container">
                <h1 class="top-header"><a href="#">Zain - Admin</a></h1>
            </div>
        </div>
        <div id="top-info" class="pull-right">
           <a href="#" class="pull-left">
               <div class="top-info-block">
                   <h3>@User.Identity.Name</h3>
                   <h4>Super User</h4>
               </div>
               <div class="top-info-block">
                   <b class="icon-user"></b>
               </div>
           </a>
           <hr class="separator pull-left">
           <a id="settings" hef="#" class="pull-left"><b class="icon-settings"></b></a>
      </div>
   </div>
   </header>
    <div class="container-fluid">
      <div class="row-fluid">
        @RenderBody()
      </div>
   </div>
   <div id="charms" class="win-ui-dark">
       <div id="theme-charms-section" class="charms-section">
           <div class="charms-header">
               <a href="#" class="close-charms win-command">
                   <span class="win-commandimage win-commandring"></span>
               </a>
               <h2>Settings</h2>
           </div>
           <div class="row-fluid">
               <div class="span12">
                   <ul class="settings-menu">
                       <li><button id="settings-menu-changepassword" class="btn btn-large" type="button">Change Password</button></li>
                       <li>
                           @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" })) {
                           @Html.AntiForgeryToken()
                            <button id="settings-menu-logoff" class="btn btn-large">Log off</button>
                           }
                       </li>
                   </ul>
               </div>
           </div>
       </div>
   </div>
   @Scripts.Render("~/bundles/jquery")
   @Scripts.Render("~/bundles/jsextlibs")
   @RenderSection("scripts", false) 
</body>
</html>