@model IEnumerable<order.model.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutApp.cshtml";
}

@section scripts
{
    @Scripts.Render("~/bundles/jsapp")
}

<div class="metro span12">
    <div class="navbar">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <a class="brand" href="#"><span aria-hidden="true" data-icon="b"></span> Customers</a>
                <div class="nav-collapse collapse pull-right">
                    <ul class="nav">
                        <li class="divider-vertical"></li>
                        <li><a href="#"><i aria-hidden="true" data-icon=""></i>  <strong>New Customer</strong></a></li>
                    </ul>
                </div>
            </div><!-- end of container-->
        </div><!-- end of navbar-inner-->
    </div><!-- end of navbar-->
    <div class="listview-container grid-layout zain-listview-container">
    @foreach (var item in Model) {
       <div class="mediumListIconTextItem zain-listviewitem">
          <img src="data:image/png;base64," class="mediumListIconTextItem-Image" data-src="holder.js/90x90" alt="90x90" style="width: 90px; height: 90px; background-color: rgb(238, 238, 238);" />
          <div class="mediumListIconTextItem-Detail">
            <h3 class="zain-heading">@Html.DisplayFor(modelItem => item.CustomerName) - @Html.DisplayFor(modelItem => item.CustomerCode)</h3>
            <span class="label label-info">@Html.DisplayFor(modelItem => item.LicenseId)</span>
            <div class="zain-action-group">
                <button type="button" class="btn btn-primary" id="btn-edit-customer">Edit</button>
                <button type="button" class="btn btn-warning" id="btn-delete-customer">Delete</button>
            </div>
          </div>
       </div>
       <hr />
    }
    </div><!-- end of listview-container-->
</div><!-- end of .metro.span12-->